// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  nrp String
  name String
  phone_number String?
  email String
  password String

  gallonOrders GallonOrder[]
  complains Complain[]
  packets Packet[]
  

  @@map("users")
}

model Admin {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  password String

  @@map("admins")
}

model Gallon {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  brand String
  stock Int @default(0)
  
  gallonOrders GallonOrder[]

  @@map("gallons")
}

model Complain {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String?
  status String 
  userId String @db.ObjectId

  user User @relation(fields: [userId], references: [id])


  @@map("complains")
}

model Packet {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  brand String
  stock Int @default(0)
  userId String @db.ObjectId

  user User @relation(fields: [userId], references: [id])

  @@map("packets")
}

model GallonOrder {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  gallonId String @db.ObjectId

  user User @relation(fields: [userId], references: [id])
  gallon Gallon @relation(fields: [gallonId], references: [id])

  @@map("gallonorders")
}

enum ComplainStatus {
  WAITING
  IN_PROGRESS
  DONE
}